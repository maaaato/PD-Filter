{
  "name": "PD Filter",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Filter for PagerDuty",
  "permissions": ["storage", "background", "contextMenus", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["content.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "scripts": ["popup.js"],
    "default_title": "PD Filter",
    "default_popup": "popup.html"
  }
}
